<script>
  $(document).ready(function(){
    $('#update_tunes').click();
    $('ul.tab li a').click(
      function(){
        var status = $(this).html();
        $('#tune_status').val(status)
        $('#update_tunes').click()
        $('ul.tab li').removeClass("none");
        $(this).closest('li').addClass("none");
      }
    )
  });

</script>

<div id="menu">
<%= form_tag( url_for(:action => 'get_tunes_list'), :remote => true ) do %>
  <%= select_tag('album_title', options_for_select(["All Albums"] + @albums.map(&:title)) , :onchange => "$('#update_tunes').click();") %></br>
  <%= select_tag('tuning_name', options_for_select(["All Tunings"] + Tuning.all.map(&:name).uniq.sort) , :onchange => "$('#update_tunes').click();") %></br>
  <%= select_tag('tune_status', options_for_select(["All Status", "Touched", "Doing", "Done"], current_user ? "Doing" : "All Sttus" ) , :onchange => "$('#update_tunes').click();", :style => "display: none") %>
  <%= submit_tag('Update', :id => "update_tunes", :style => "display: none") %>
<% end %>

  <br><br>
  <div><center><span id="tune_num">0</span> tunes.</center></div>

</div>

<div id="main">
  <ul class="tab clear">
    <li><a href="#" class="blue">All Status</a></li>
    <li><a href="#" class="red">Touched</a></li>
    <li><a href="#" class="green">Doing</a></li>
    <li><a href="#" class="yellow">Done</a></li>
  </ul>

  <div id="tune_list"></div>
</div>
